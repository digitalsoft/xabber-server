[Unit]
Description=Xabber Server
After=network.target

[Service]
Type=forking
PIDFile=INSTALL_PATH/xabber_server.pid
User=USER
Group=GROUP
LimitNOFILE=65536
Restart=on-failure
RestartSec=5
ExecStart=INSTALL_PATH/xmppserverui/xabber-server start
ExecStop=INSTALL_PATH/xmppserverui/xabber-server stop
ExecStartPost=/bin/sleep 0.1

[Install]
WantedBy=multi-user.target
